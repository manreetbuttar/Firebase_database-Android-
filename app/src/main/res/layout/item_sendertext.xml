<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingRight="15dp"
                android:paddingLeft="60dp"
                android:id="@+id/ll_senderparent"
                android:background="@drawable/selective_chatview"
                android:clipToPadding="false">

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"
                  android:background="@drawable/sendbubble"
                  android:layout_alignParentRight="true"
                  android:elevation="2dp"
                  android:paddingBottom="4dp"
                  android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sendermessage"
                android:maxWidth="204dp"
                android:textColor="#fff"
                android:padding="10dp"
                android:textSize="14dp"
                android:text="Hie avatar asdfsdfdfs "
        />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_mesagetime"
                  android:layout_toRightOf="@+id/tv_sendermessage"
                  android:layout_alignParentRight="true"
                  android:text="10:30 a.m"
                  android:textSize="10dp"
                  android:textColor="@color/white"
                  android:padding="4dp"
                  android:layout_marginTop="5dp"


        />

    </LinearLayout>





</RelativeLayout>