<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.example.firebasechatfinalmodule.utils.CircleImageView
            android:layout_width="@dimen/_104sdp"
            android:layout_height="@dimen/_104sdp"
            android:id="@+id/iv_userprofile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            app:civ_border_color="@color/black"
            android:src="@drawable/ic_launcher_background"
            app:civ_fill_color="@color/grey"/>


    <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:id="@+id/iv_uploadimage"
            android:src="@drawable/editicon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="227dp"
            android:rotationX="190"
            android:layout_marginTop="128dp"
            android:layout_marginRight="227dp"/>



</RelativeLayout>