<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:gravity="end"
        android:id="@+id/rl_videoleft"
        android:layout_margin="12dp"
        android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="282dp"
                    android:gravity="center"
                    android:background="@drawable/sendbubble"
                    android:layout_height="182dp">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageViewforplaceright"/>


        </LinearLayout>

        <ImageView android:layout_width="44dp"
                   android:layout_height="44dp"
                   android:id="@+id/btn_playforsender"
                   android:layout_margin="6dp"
                   android:layout_centerInParent="true"
                   android:src="@drawable/playbutton"


        />


    </RelativeLayout>





</RelativeLayout>